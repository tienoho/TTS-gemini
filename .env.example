# Flask Configuration
FLASK_APP=app.main:create_app
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///tts_api.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/tts_api

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Audio Configuration
MAX_AUDIO_FILE_SIZE=10485760
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,flac
DEFAULT_VOICE_NAME=Alnilam
MAX_TEXT_LENGTH=5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PREMIUM_PER_MINUTE=1000

# File Storage
UPLOAD_FOLDER=uploads/audio
MAX_CONTENT_LENGTH=16777216

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/tts_api.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring
ENABLE_MONITORING=true
MONITORING_DASHBOARD_PORT=8080

# Development Settings
DEBUG=true
TESTING=false

# Production Settings (override in production)
# DEBUG=false
# TESTING=false
# LOG_LEVEL=WARNING